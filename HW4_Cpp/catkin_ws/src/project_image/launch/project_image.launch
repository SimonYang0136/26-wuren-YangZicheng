<?xml version="1.0"?>
<launch>
    <!-- 项目图像投影节点启动文件 -->
    
    <!-- 启动投影节点 -->
    <node 
        name="project_image_node" 
        pkg="project_image" 
        type="project_image_node" 
        output="screen"
        respawn="false">
    </node>

    <!-- 可选：启动 RViz 显示图像 -->
    <node 
        name="rviz_display" 
        pkg="rviz" 
        type="rviz" 
        args="-d $(find project_image)/config/image_visualization.rviz"
        output="screen"
        required="false" />
    
    <!-- 显示启动信息 -->
    <param name="use_sim_time" value="false"/>
    
</launch>
